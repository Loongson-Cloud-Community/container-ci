image:
	docker build \
		--build-arg ROOTFS=rootfs.tar.gz \
		--build-arg https_proxy=$(https_proxy) \
		--build-arg http_proxy=$(http_proxy) \
{%- set tag_list = tags.split(',') %}
{%- for tag in tag_list %}
		-t lcr.loongnix.cn/library/erlang:{{ tag }} \
{%- endfor %}
		.

push:
{%- set tag_list = tags.split(',') %}
{%- for tag in tag_list %}
	docker push lcr.loongnix.cn/library/erlang:{{ tag }}
{%- endfor %}

